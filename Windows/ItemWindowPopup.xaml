<Window x:Class="FoodWasteApp.Windows.ItemWindowPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodWasteApp.Windows"
        mc:Ignorable="d"
        Title="ItemWindowPopup" Height="331" Width="667" WindowStyle="None" Background="#FF7B7B7B">
    <Grid x:Name="maingrid">
        <TextBlock x:Name="FoodName" HorizontalAlignment="Left" Margin="65,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="59" Width="166" FontSize="18" Background="White"/>
        <TextBlock x:Name="DateString" HorizontalAlignment="Left" Margin="65,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Height="59" Width="166" FontSize="18" Background="White"/>
        <Button Content="Consumed" HorizontalAlignment="Left" Margin="65,263,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Wasted" HorizontalAlignment="Left" Margin="171,263,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="Close Popup" HorizontalAlignment="Left" Margin="247,263,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>

    </Grid>
</Window>
